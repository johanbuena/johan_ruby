<%= form_with model: @user do |form| %>

<p>
    <%= form.label :username %><br/>
    <%= form.text_field :username %><br/>
</p>

<p>
    <%= form.label :age %><br/>
    <%= form.text_field :age %><br/>
</p>

<p>
    <% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>
</p>

<p>
    <%= form.submit %>
</p>

<% end %>